
@{
    ViewData["Title"] = "MovieList";
    Layout = "~/Views/UserWebUILayout/LayoutUI.cshtml";
}

@model List<MovieApi.Dto.Dtos.MovieDtos.ResultMovieDto>


<div class="page-single movie_list">
    <div class="container">
        <div class="row ipad-width2">
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="topbar-filter">
                    <p>Toplam <span>184 film</span> mevcut</p>
                    <label>Sıralama:</label>
                    <select>
                        <option value="popularity">Popüler sıralama A--Z</option>
                        <option value="popularity">Popüler sıralama Z--A</option>
                        <option value="rating">Reytinge Göre A--Z</option>
                        <option value="rating">Reytinge Göre Z--A</option>
                        <option value="date">Eklenme Sırasına Göre A--Z</option>
                        <option value="date">Eklenme Sırasına Göre Z--A</option>
                    </select>
                    <a href="movielist.html" class="list"><i class="ion-ios-list-outline active"></i></a>
                    <a href="moviegrid.html" class="grid"><i class="ion-grid"></i></a>
                </div>
                @foreach (MovieApi.Dto.Dtos.MovieDtos.ResultMovieDto movie in Model)
                {
                    <div class="movie-item-style-2">
                        <img src="@movie.CoverImageUrl" alt="@movie.Title image">
                        <div class="mv-item-infor">
                            <h6><a href="moviesingle.html">@movie.Title <span>(@movie.CreatedYear)</span></a></h6>
                            <p class="rate"><i class="ion-android-star"></i><span>@movie.Rating</span> /10</p>
                            <p class="describe">@movie.Description</p>
                            <p class="run-time"> Run Time: @movie.Duration’    .     <span>MMPA: PG-13 </span>    .     <span>Çıkış Tarihi: @movie.ReleaseDate</span></p>
                            <p>Director: <a href="#">Daha Sonra Yapılacak</a></p>
                            <p>Stars: <a href="#">Robert Downey Jr.,</a> <a href="#">Chris Evans,</a> <a href="#">  Chris Hemsworth</a></p>
                        </div>
                    </div>
                }

                <div class="topbar-filter">
                    <label>Her Sayfadaki Film Sayfası:</label>
                    <select>
                        <option value="range">5 Film</option>
                        <option value="saab">10 Film</option>
                    </select>
                    <div class="pagination2">
                        <span>Sayfa 1 - 2:</span>
                        <a class="active" href="#">1</a>
                        <a href="#">2</a>
                        <a href="#"><i class="ion-arrow-right-b"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="sidebar">
                    <div class="searh-form">
                        <h4 class="sb-title">Film Ara</h4>
                        <form class="form-style-1" action="#">
                            <div class="row">
                                <div class="col-md-12 form-it">
                                    <label>Film İsmi</label>
                                    <input type="text" placeholder="Aranacak Kelimeleri Giriniz">
                                </div>
                                <div class="col-md-12 form-it">
                                    <label>Tür & Kategori</label>
                                    <div class="group-ip">
                                        <select name="skills" multiple="" class="ui fluid dropdown">
                                            <option value="">Film Türü Seçiniz</option>
                                            <option value="Action1">Aksiyon</option>
                                            <option value="Action2">Macera</option>
                                            <option value="Action3">Animasyon</option>
                                            <option value="Action4">Korku</option>
                                            <option value="Action5">Komedi</option>
                                        </select>
                                    </div>

                                </div>
                                <div class="col-md-12 form-it">
                                    <label>Reyting Puanı</label>

                                    <select>
                                        <option value="range">-- Reyting Puanı Seçin --</option>
                                        <option value="saab">-- 8 ve üzeri --</option>
                                        <option value="saab">-- 7 ve 8 Arası --</option>
                                        <option value="saab">-- 5 ve 7 Arası --</option>
                                        <option value="saab">-- 5'den düşük --</option>
                                    </select>

                                </div>
                                <div class="col-md-12 form-it">
                                    <label>Film Çıkış Tarihi</label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <select>
                                                <option value="range">Yıl Seçiniz</option>
                                                <option value="2000">2000</option>
                                                <option value="2010">2010</option>
                                                <option value="2020">2020</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <select>
                                                <option value="range">Yıl Seçiniz</option>
                                                <option value="2000">2000</option>
                                                <option value="2010">2010</option>
                                                <option value="2020">2020</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 ">
                                    <input class="submit" type="submit" value="Film Ara">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="ads">
                        <img src="~/Film-Review-Movie-Database/images/uploads/ads1.png" alt="">
                    </div>
                    <div class="sb-facebook sb-it">
                        <h4 class="sb-title">Find us on Facebook</h4>
                        <iframe src="#" data-src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Ftemplatespoint.net%2F%3Ffref%3Dts&tabs=timeline&width=340&height=315px&small_header=true&adapt_container_width=false&hide_cover=false&show_facepile=true&appId" height="315" style="width:100%;border:none;overflow:hidden"></iframe>
                    </div>
                    <div class="sb-twitter sb-it">
                        <h4 class="sb-title">Tweet to us</h4>
                        <div class="slick-tw">
                            <div class="tweet item" id="">
                                <!-- Put your twiter id here -->
                            </div>
                            <div class="tweet item" id="">
                                <!-- Put your 2nd twiter account id here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>